---
import type { Recipe } from '../../types/recipe';
import RecipeImageCarousel from './RecipeImageCarousel.astro';

interface Props {
  recipe: Recipe;
}

const { recipe } = Astro.props;

// Get the first 3 tags and count remaining
const displayTags = recipe.tags?.slice(0, 3) || [];
const remainingTagsCount = recipe.tags ? Math.max(0, recipe.tags.length - 3) : 0;

// Calculate total cooking time
const totalTime = recipe.metadata.timeEntries?.reduce((total, entry) => total + entry.minutes, 0) || 0;
---

<div class="recipe-card group relative" data-recipe-id={recipe.id} data-category={recipe.category || ''}>
  <!-- Selection Checkbox -->
  <div class="selection-indicator absolute top-2 left-2 z-10 opacity-0 md:group-hover:opacity-100 transition-opacity">
    <input 
      type="checkbox" 
      class="recipe-select-checkbox w-5 h-5 rounded border-gray-300 text-orange-600 focus:ring-orange-500 cursor-pointer"
      data-recipe-id={recipe.id}
    >
  </div>

  <!-- Recipe Image Carousel -->
  <RecipeImageCarousel images={recipe.images || []} />
  
  <!-- Recipe Content -->
  <div class="card-content p-4">
    <div class="mb-3">
      <a href={`/rezept/${recipe.id}`} class="block group recipe-link" data-recipe-link>
        <h3 class="heading-tertiary mb-1 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors" data-content={recipe.title}></h3>
        {recipe.subtitle && (
          <p class="text-sm text-muted" data-content={recipe.subtitle}></p>
        )}
      </a>
    </div>
    
    {recipe.description && (
      <p class="text-body text-sm mb-3 line-clamp-2" data-content={recipe.description}></p>
    )}

    <!-- Recipe Tags -->
    {(displayTags.length > 0 || remainingTagsCount > 0) && (
      <div class="flex flex-wrap gap-1.5 mb-4">
        {displayTags.map((tag) => (
          <span class="tag" data-content={tag}></span>
        ))}
        {remainingTagsCount > 0 && (
          <span class="tag-more" title={recipe.tags?.slice(3).join(', ')}>
            +{remainingTagsCount} weitere
          </span>
        )}
      </div>
    )}

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 my-3"></div>

    <!-- Recipe Metadata -->
    <div class="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400">
      <div class="flex items-center gap-4">
        {recipe.metadata.servings && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1.5 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
            <span>{recipe.metadata.servings} Portionen</span>
          </div>
        )}
        {totalTime > 0 && (
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1.5 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <span>{totalTime} Min</span>
          </div>
        )}
      </div>

      <!-- Meatball Menu -->
      <div class="recipe-menu-container">
        <button class="recipe-menu-btn p-1 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
          <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Menu Portal (outside of card) -->
<div class="recipe-menu hidden fixed w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 z-50" role="menu">
  <div class="py-1">
    <!-- Export Option with Submenu -->
    <div class="relative">
      <button class="menu-item export-recipe group" data-recipe-id={recipe.id}>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <span>Exportieren</span>
        <svg class="w-4 h-4 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>

      <!-- Export Submenu -->
      <div class="submenu absolute left-full top-0 w-48 bg-white dark:bg-gray-800 rounded-md shadow-lg border border-gray-200 dark:border-gray-700 ml-0.5 hidden group-hover:block">
        <div class="py-1">
          <button class="menu-item export-json" data-recipe-id={recipe.id}>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span>Als JSON</span>
          </button>
          <button class="menu-item export-rcb" data-recipe-id={recipe.id}>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
            <span>Vollständig</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Shopping List Option -->
    <button class="menu-item add-to-shopping-list" data-recipe-id={recipe.id}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
      </svg>
      <span>Zur Einkaufsliste</span>
    </button>

    <!-- Delete Option -->
    <button class="menu-item delete-recipe text-red-600 dark:text-red-400" data-recipe-id={recipe.id}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      <span>Löschen</span>
    </button>
  </div>
</div>

<style>
  .recipe-card.selected {
    @apply ring-2 ring-orange-500;
  }
  
  .recipe-card.selected .selection-indicator {
    @apply opacity-100;
  }

  .recipe-card.selection-mode {
    @apply cursor-pointer;
  }

  .recipe-card.selection-mode .recipe-link {
    @apply pointer-events-none;
  }

  .recipe-card.selection-mode .selection-indicator {
    @apply opacity-100;
  }

  .recipe-card.selection-mode .recipe-menu-btn {
    @apply pointer-events-auto;
  }

  .tag {
    @apply text-xs py-0.5 px-2 rounded-full bg-orange-50 text-orange-700 dark:bg-orange-900/30 dark:text-orange-300;
  }

  .tag-more {
    @apply text-xs py-0.5 px-2 rounded-full bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400;
  }

  .recipe-card {
    @apply relative;
  }

  .recipe-menu {
    @apply absolute top-full right-0 mt-1;
  }

  .menu-item {
    @apply flex items-center w-full px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 gap-2;
  }

  /* Submenu styles */
  .submenu {
    @apply z-50;
  }

  .submenu:hover,
  .export-recipe:hover + .submenu {
    @apply block;
  }

  /* Adjust submenu position if it would go off screen */
  .recipe-menu.align-submenu-left .submenu {
    @apply right-full left-auto -mr-0.5 ml-0;
  }
</style>

<script>
  // Guard to prevent multiple initializations
  if ((window as any).recipeCardInitialized) {
    // Already initialized, just decode content for new cards
    document.querySelectorAll('[data-content]:not([data-decoded])').forEach(element => {
      const content = element.getAttribute('data-content');
      if (content) {
        const textarea = document.createElement('textarea');
        textarea.innerHTML = content;
        element.textContent = textarea.value;
        element.setAttribute('data-decoded', 'true');
      }
    });
  } else {
    (window as any).recipeCardInitialized = true;
    
    // Initialize content decoding
    document.querySelectorAll('[data-content]').forEach(element => {
      const content = element.getAttribute('data-content');
      if (content) {
        const textarea = document.createElement('textarea');
        textarea.innerHTML = content;
        element.textContent = textarea.value;
        element.setAttribute('data-decoded', 'true');
      }
    });

    // Use event delegation for all recipe cards
    let menu: HTMLElement | null = null;
    let menuClickHandler: ((e: Event) => void) | null = null;
    let documentClickHandler: ((e: Event) => void) | null = null;
    
    function initializeRecipeCards() {
      // Get or create menu element
      menu = document.querySelector('.recipe-menu') as HTMLElement;
      if (!menu) return;
      
      // Remove old handlers if they exist
      if (menuClickHandler) {
        menu.removeEventListener('click', menuClickHandler);
      }
      if (documentClickHandler) {
        document.removeEventListener('click', documentClickHandler);
      }
      
      // Use event delegation for menu clicks
      menuClickHandler = (e: Event) => {
        e.stopPropagation();
      };
      menu.addEventListener('click', menuClickHandler);
      
      // Close menu when clicking outside (delegated)
      documentClickHandler = () => {
        if (menu) {
          menu.classList.add('hidden');
        }
      };
      document.addEventListener('click', documentClickHandler);
    }
    
    // Initialize on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeRecipeCards);
    } else {
      initializeRecipeCards();
    }
    
    // Re-initialize on Astro navigation
    document.addEventListener('astro:after-swap', () => {
      // Decode new content
      document.querySelectorAll('[data-content]:not([data-decoded])').forEach(element => {
        const content = element.getAttribute('data-content');
        if (content) {
          const textarea = document.createElement('textarea');
          textarea.innerHTML = content;
          element.textContent = textarea.value;
          element.setAttribute('data-decoded', 'true');
        }
      });
      initializeRecipeCards();
    });
  }

  // Use event delegation for card clicks (only add once)
  if (!(window as any).recipeCardClickHandler) {
      const touchData = new Map<HTMLElement, { startX: number; startY: number; moved: boolean; handled: boolean }>();
      const TAP_THRESHOLD = 10;
      const CLICK_DELAY = 300; // Delay after touch to prevent click event
      
      // Function to clean up stale touch data entries (cards that no longer exist in DOM)
      function cleanupStaleTouchData() {
        const existingCards = new Set(document.querySelectorAll('.recipe-card[data-recipe-id]'));
        const keysToDelete: HTMLElement[] = [];
        
        touchData.forEach((_, card) => {
          if (!existingCards.has(card) || !document.contains(card)) {
            keysToDelete.push(card);
          }
        });
        
        keysToDelete.forEach(card => touchData.delete(card));
      }
      
      // Store interval ID for cleanup
      let cleanupInterval: ReturnType<typeof setInterval> | null = null;
      
      // Clean up touch data on navigation
      document.addEventListener('astro:before-swap', () => {
        touchData.clear();
        if (cleanupInterval) {
          clearInterval(cleanupInterval);
          cleanupInterval = null;
        }
      });
      
      // Periodically clean up stale entries (every 5 seconds)
      // Only start if not already running
      if (!cleanupInterval) {
        cleanupInterval = setInterval(cleanupStaleTouchData, 5000);
      }
      
      // Handle card clicks via delegation
      (window as any).recipeCardClickHandler = (e: Event) => {
        const target = e.target as HTMLElement;
        
        // Only handle clicks that are actually on or inside a recipe card
        // Use a more specific check to avoid false matches
        const card = target.closest('.recipe-card[data-recipe-id]') as HTMLElement;
        if (!card) return; // Not a recipe card, let other handlers process it
        
        // Clean up stale entries before checking
        if (!document.contains(card)) {
          touchData.delete(card);
          return;
        }
        
        // Check if this click was already handled by touch event
        const data = touchData.get(card);
        if (data && data.handled) {
          e.preventDefault();
          e.stopPropagation();
          // Clean up after handling
          setTimeout(() => touchData.delete(card), CLICK_DELAY);
          return;
        }
        
        const recipeLink = card.querySelector('[data-recipe-link]') as HTMLAnchorElement;
        const recipeId = card.getAttribute('data-recipe-id');
        
        // Don't handle clicks on interactive elements - let them work normally
        if (target.closest('.recipe-menu-btn') || 
            target.closest('.recipe-menu') ||
            target.closest('.selection-indicator') ||
            target.closest('[data-recipe-link]') ||
            target.closest('a') || // Don't interfere with any links
            target.closest('button') || // Don't interfere with any buttons
            target.closest('input') || // Don't interfere with inputs
            target.closest('select')) { // Don't interfere with selects
          return; // Let the element handle its own click
        }
        
        // If in selection mode, handle selection
        if (card.classList.contains('selection-mode')) {
          e.preventDefault();
          e.stopPropagation();
          const checkbox = card.querySelector('.recipe-select-checkbox') as HTMLInputElement;
          if (checkbox) {
            checkbox.checked = !checkbox.checked;
            checkbox.dispatchEvent(new Event('change', { bubbles: true }));
          }
          return;
        }
        
        // Otherwise, navigate to recipe when clicking anywhere on the card
        if (recipeLink && recipeId) {
          window.location.href = recipeLink.href;
        }
      };
      
      // Handle touch events via delegation
      (window as any).recipeCardTouchStartHandler = (e: TouchEvent) => {
        const target = e.target as HTMLElement;
        // Only handle touches on actual recipe cards
        const card = target.closest('.recipe-card[data-recipe-id]') as HTMLElement;
        if (!card) return; // Not a recipe card, let other handlers process it
        
        // Clean up if card no longer exists
        if (!document.contains(card)) {
          touchData.delete(card);
          return;
        }
        
        // Don't handle touches on interactive elements
        if (target.closest('a') || 
            target.closest('button') || 
            target.closest('input') || 
            target.closest('select')) {
          return; // Let the element handle its own touch
        }
        
        const touch = e.touches[0];
        if (!touch) return;
        
        touchData.set(card, {
          startX: touch.clientX,
          startY: touch.clientY,
          moved: false,
          handled: false
        });
      };
      
      (window as any).recipeCardTouchMoveHandler = (e: TouchEvent) => {
        const target = e.target as HTMLElement;
        const card = target.closest('.recipe-card[data-recipe-id]') as HTMLElement;
        if (!card) return; // Not a recipe card, ignore
        
        // Clean up if card no longer exists
        if (!document.contains(card)) {
          touchData.delete(card);
          return;
        }
        
        const data = touchData.get(card);
        if (!data || !e.touches[0]) return;
        
        const touch = e.touches[0];
        const deltaX = Math.abs(touch.clientX - data.startX);
        const deltaY = Math.abs(touch.clientY - data.startY);
        
        if (deltaX > TAP_THRESHOLD || deltaY > TAP_THRESHOLD) {
          data.moved = true;
        }
      };
      
      (window as any).recipeCardTouchEndHandler = (e: TouchEvent) => {
        const target = e.target as HTMLElement;
        const card = target.closest('.recipe-card[data-recipe-id]') as HTMLElement;
        if (!card) return; // Not a recipe card, let other handlers process it
        
        // Clean up if card no longer exists
        if (!document.contains(card)) {
          touchData.delete(card);
          return;
        }
        
        // Don't handle touches on interactive elements
        if (target.closest('a') || 
            target.closest('button') || 
            target.closest('input') || 
            target.closest('select')) {
          touchData.delete(card);
          return; // Let the element handle its own touch
        }
        
        const data = touchData.get(card);
        if (!data) return;
        
        // Only handle if it was a tap (not a scroll)
        if (data.moved) {
          touchData.delete(card);
          return;
        }
        
        // Don't handle touches on interactive elements
        if (target.closest('.recipe-menu-btn') || 
            target.closest('.recipe-menu') ||
            target.closest('.selection-indicator') ||
            target.closest('[data-recipe-link]')) {
          touchData.delete(card);
          return;
        }
        
        const recipeLink = card.querySelector('[data-recipe-link]') as HTMLAnchorElement;
        const recipeId = card.getAttribute('data-recipe-id');
        
        // If in selection mode, handle selection
        if (card.classList.contains('selection-mode')) {
          e.preventDefault();
          e.stopPropagation();
          data.handled = true;
          const checkbox = card.querySelector('.recipe-select-checkbox') as HTMLInputElement;
          if (checkbox) {
            checkbox.checked = !checkbox.checked;
            checkbox.dispatchEvent(new Event('change', { bubbles: true }));
          }
          setTimeout(() => {
            touchData.delete(card);
          }, CLICK_DELAY);
          return;
        }
        
        // If touching the link, let it handle navigation naturally
        if (target.closest('[data-recipe-link]')) {
          touchData.delete(card);
          return;
        }
        
        // Otherwise, navigate to recipe when tapping anywhere on the card
        if (recipeLink && recipeId) {
          e.preventDefault();
          e.stopPropagation();
          data.handled = true;
          
          // Prevent click event from firing after touch
          setTimeout(() => {
            touchData.delete(card);
          }, CLICK_DELAY);
          
          window.location.href = recipeLink.href;
        } else {
          touchData.delete(card);
        }
      };
      
      // Add delegated event listeners (only once)
      // Use capture: false (bubbling phase) to avoid blocking other handlers
      document.addEventListener('click', (window as any).recipeCardClickHandler, false);
      document.addEventListener('touchstart', (window as any).recipeCardTouchStartHandler, { passive: true });
      document.addEventListener('touchmove', (window as any).recipeCardTouchMoveHandler, { passive: true });
      document.addEventListener('touchend', (window as any).recipeCardTouchEndHandler, { passive: false });
      
      // Prevent link clicks in selection mode (also use bubbling phase)
      document.addEventListener('click', (e: Event) => {
        const target = e.target as HTMLElement;
        const link = target.closest('[data-recipe-link]') as HTMLAnchorElement;
        if (!link) return;
        
        const card = link.closest('.recipe-card[data-recipe-id]') as HTMLElement;
        if (card && card.classList.contains('selection-mode')) {
          e.preventDefault();
          e.stopPropagation();
        }
      }, false);
    }

    // Handle menu positioning via delegation (only add once)
    if (!(window as any).recipeMenuHandler) {
      (window as any).recipeMenuHandler = (e: Event) => {
        const target = e.target as HTMLElement;
        const btn = target.closest('.recipe-menu-btn') as HTMLElement;
        if (!btn) return; // Not a menu button, let other handlers process it
        
        // Only stop propagation if we're actually handling the menu
        e.stopPropagation();
        
        const menu = document.querySelector('.recipe-menu') as HTMLElement;
        if (!menu) return;
        
        // Close all other menus first
        document.querySelectorAll('.recipe-menu').forEach(m => {
          m.classList.add('hidden');
        });

        // Position and show menu
        const rect = btn.getBoundingClientRect();
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const scrollLeft = window.pageXOffset || document.documentElement.scrollLeft;

        menu.style.top = `${rect.bottom + scrollTop + 4}px`;
        menu.style.left = `${rect.left + scrollLeft - menu.offsetWidth + btn.offsetWidth}px`;
        
        // Copy recipe ID to menu
        const recipeId = (btn.closest('.recipe-card') as HTMLElement)?.dataset.recipeId;
        menu.querySelectorAll('[data-recipe-id]').forEach(el => {
          (el as HTMLElement).dataset.recipeId = recipeId || '';
        });

        menu.classList.toggle('hidden');

        // Check if menu would go off screen
        const menuRect = menu.getBoundingClientRect();
        if (menuRect.right > window.innerWidth) {
          menu.style.left = `${rect.left + scrollLeft - menu.offsetWidth}px`;
        }
        if (menuRect.bottom > window.innerHeight) {
          menu.style.top = `${rect.top + scrollTop - menu.offsetHeight - 4}px`;
        }

        // Check if submenu would go off screen
        const submenu = menu.querySelector('.submenu') as HTMLElement;
        if (submenu) {
          const submenuRect = submenu.getBoundingClientRect();
          if (submenuRect.right > window.innerWidth) {
            menu.classList.add('align-submenu-left');
          } else {
            menu.classList.remove('align-submenu-left');
          }
        }
      };
      
      // Use bubbling phase to avoid blocking other handlers
      document.addEventListener('click', (window as any).recipeMenuHandler, false);
    }

    // Handle menu actions via delegation (only add once)
    if (!(window as any).recipeMenuActionHandler) {
      (window as any).recipeMenuActionHandler = async (e: Event) => {
        const target = e.target as HTMLElement;
        const menu = document.querySelector('.recipe-menu') as HTMLElement;
        if (!menu || !menu.contains(target)) return;
        
        const btn = target.closest('.menu-item') as HTMLElement;
        if (!btn) return;
        
        const recipeId = btn.dataset.recipeId;
        if (!recipeId) return;
        
        // Handle export options
        if (btn.classList.contains('export-json') || btn.classList.contains('export-rcb')) {
          const format = btn.classList.contains('export-json') ? 'json' : 'rcb';
          window.location.href = `/api/recipes/export?id=${recipeId}&format=${format}`;
          menu.classList.add('hidden');
          return;
        }
        
        // Handle delete option
        if (btn.classList.contains('delete-recipe')) {
          const card = document.querySelector(`.recipe-card[data-recipe-id="${recipeId}"]`);
          if (!card) return;

          const confirmed = await window.showDeleteConfirm('Möchtest du dieses Rezept wirklich löschen?');
          if (!confirmed) return;

          try {
            const response = await fetch(`/api/recipes?id=${recipeId}`, {
              method: 'DELETE',
            });

            if (!response.ok) throw new Error('Fehler beim Löschen des Rezepts');

            // Remove card with animation
            card.classList.add('fade-out');
            setTimeout(() => card.remove(), 300);
            
            // Update recipe count
            const countElement = document.getElementById('recipe-count');
            if (countElement) {
              const currentCount = parseInt(countElement.textContent || '0');
              countElement.textContent = (currentCount - 1).toString();
            }

            if (window.showSuccess) {
              await window.showSuccess('Rezept wurde gelöscht');
            }
          } catch (error) {
            console.error('Error deleting recipe:', error);
            if (window.showError) {
              await window.showError('Fehler beim Löschen des Rezepts');
            }
          }

          menu.classList.add('hidden');
          return;
        }
        
        // Handle add to shopping list
        if (btn.classList.contains('add-to-shopping-list')) {
